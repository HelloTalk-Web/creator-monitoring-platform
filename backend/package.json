{
  "name": "creator-monitoring-backend",
  "version": "0.1.0",
  "description": "创作者数据监控平台后端API服务",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --exclude 'static/**' --exclude 'backups/**' --exclude 'exports/**' src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "db:reset": "tsx src/database/reset.ts",
    "db:studio": "drizzle-kit studio",
    "script:update-videos": "tsx scripts/update-video-data.ts"
  },
  "keywords": [
    "creator",
    "monitoring",
    "social-media",
    "scraping"
  ],
  "author": "Sean",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.6",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.12.3",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "p-queue": "^9.0.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitest/ui": "^4.0.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
